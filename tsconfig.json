{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/departments/**/*",
    "src/employee/**/*",
    "src/roles/**/*",
    "mainMenu.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
